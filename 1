# Update AndroidManifest.xml untuk menambahkan SettingsActivity
if [ -f app/src/main/AndroidManifest.xml ]; then
    if ! grep -q "SettingsActivity" app/src/main/AndroidManifest.xml; then
        sed -i '/<\/application>/i \        <activity android:name=".SettingsActivity" android:exported="false" android:screenOrientation="portrait" />' app/src/main/AndroidManifest.xml
        echo "‚úÖ SettingsActivity ditambahkan ke AndroidManifest.xml"
    fi
fi

echo "‚úÖ Settings dan cache management telah diimplementasikan!"
echo "   - Splash screen memuat data ke cache"
echo "   - Halaman Settings dengan info cache"
echo "   - Update data dari GitHub"
echo "   - Clear cache"
echo "   - Menu Settings di MainActivity"
